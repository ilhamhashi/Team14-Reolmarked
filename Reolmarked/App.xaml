<Application x:Class="Reolmarked.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Reolmarked"
             xmlns:vm="clr-namespace:Reolmarked.MVVM.ViewModel"
             xmlns:view="clr-namespace:Reolmarked.MVVM.View"   
             xmlns:controls="clr-namespace:Reolmarked.MVVM.View.controls"   
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ToggleButton.xaml"/>
                <ResourceDictionary Source="Themes/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Themes/ButtonDictionary.xaml"/>
                <ResourceDictionary Source="Themes/TextBoxDictionary.xaml"/>
                <!-- <ResourceDictionary Source="Themes/GlobalDictionary.xaml"/> -->
                <ResourceDictionary Source="Themes/ShelfButtonDictionary.xaml"/>
                <ResourceDictionary Source="Themes/SearchTextBoxDictionary.xaml"/>
                <ResourceDictionary Source="Themes/DataGridDictionary.xaml"/>             
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate DataType="{x:Type vm:ManageShelvesViewModel}">
                <controls:ShelfOverview/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vm:CreateRentalViewModel}">
                <view:CreateRentalView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:RentersViewModel}">
                <view:RentersView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SalesViewModel}">
                <view:SalesView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ManageRentalsViewModel}">
                <view:RentalsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MonthlyStatementViewModel}">
                <view:MonthlyStatementView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PriceLabelsViewModel}">
                <view:PriceLabelsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ShelfSelectionViewModel}">
                <view:ShelfSelectionView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:NewRentalSummaryViewModel}">
                <view:NewRentalSummaryView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PaymentViewModel}">
                <view:PaymentView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:RenterSelectionViewModel}">
                <view:RenterSelectionView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MonthlyStatementViewModel}">
                <view:MonthlyStatement/>
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>
</Application>
