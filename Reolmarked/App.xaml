<Application x:Class="Reolmarked.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Reolmarked"
             xmlns:vm="clr-namespace:Reolmarked.MVVM.ViewModel"
             xmlns:view="clr-namespace:Reolmarked.MVVM.View"             
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Themes/ButtonDictionary.xaml"/>
                <ResourceDictionary Source="Themes/TextBoxDictionary.xaml"/>
                <!-- <ResourceDictionary Source="Themes/GlobalDictionary.xaml"/> -->
                <ResourceDictionary Source="Themes/ShelfButtonDictionary.xaml"/>
                <ResourceDictionary Source="Themes/SearchTextBoxDictionary.xaml"/>
                <ResourceDictionary Source="Themes/DataGridDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:RentalAgreementViewModel}">
                <view:CreateRentalView/>
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>
</Application>
