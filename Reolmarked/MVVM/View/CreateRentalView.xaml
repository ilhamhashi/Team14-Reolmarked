<UserControl x:Class="Reolmarked.MVVM.View.CreateRentalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reolmarked.MVVM.View"
             xmlns:vm="clr-namespace:Reolmarked.MVVM.ViewModel"
             xmlns:controls="clr-namespace:Reolmarked.MVVM.View.controls"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000"
             Background="#f4f6f8">


    <UserControl.DataContext>
        <vm:CreateRentalViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        
        <ListBox ItemsSource="{Binding ShelvesCollectionView, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                 SelectedItem="{Binding SelectedShelf, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                 Grid.ColumnSpan="2"
                 SelectionChanged="ListBox_SelectionChanged">

            <!-- ItemsPanelTemplate -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <!-- ItemContainerStyle -->
            <ListBox.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Column"
                    Value="{Binding ColumnIndex, UpdateSourceTrigger=PropertyChanged}" />
                    <Setter Property="Grid.Row"
                    Value="{Binding RowIndex, UpdateSourceTrigger=PropertyChanged}" />
                </Style>
            </ListBox.ItemContainerStyle>

            <!-- ItemTemplate -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ShelfId, UpdateSourceTrigger=PropertyChanged}"
                               Background="Green"
                               Foreground="White"
                               Width="50"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        
        <ContentControl Grid.Column="2" 
                        Margin="10"
                        Content="{Binding CurrentCreateRentalView}"/>

        <StackPanel Grid.Column="2">
            <Label Content="Vælg Kunde"/>
            <!-- Dropdown til kunde -->
            <ComboBox ItemsSource="{Binding RentersCollectionView, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding SelectedRenter, UpdateSourceTrigger=PropertyChanged}" 
                      Width="160">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} {1}, {2}">
                                    <Binding Path="FirstName"/>
                                    <Binding Path="LastName"/>
                                    <Binding Path="PersonId"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Label Content="Kan ikke finde kunde? Opret ny"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Valgt reol: "
                       Margin="0,0,10,0"/>
                <Label Content="{Binding SelectedShelf.ShelfId, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Tilføj flere reoler"
                           Margin=" 0,0,20,0"/>
                <CheckBox  Style="{StaticResource SwitchCheckBoxStyle}"
                           IsChecked="False"
                           Command="{Binding IsAddingMoreShelvesCommand, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <Button Content="Bekræft valg"
                    Command="{Binding AddRentalCommand, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,10,0,0"/>
            
            <Button Content="Ryd Markering"
                    Command="{Binding ResetFieldsCommand, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,10,0,0"/>
            
            <TextBlock Text="Vælg betalingsmetode"/>
            
            <!-- Dropdown til betalingsmetode -->
            <ComboBox ItemsSource="{Binding PaymentMethodsCollectionView, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding SelectedPaymentMethod, UpdateSourceTrigger=PropertyChanged}" 
                      Width="160">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Content="Videre til betaling"
                    Command="{Binding PayRentalCommand, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
       

