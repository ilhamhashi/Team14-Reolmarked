<UserControl x:Class="Reolmarked.MVVM.View.RentalsView" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:vm="clr-namespace:Reolmarked.MVVM.ViewModel" 
             Background="White" 
             Height="600" Width="800">
    
    <UserControl.DataContext>
        <vm:CreateRentalViewModel/>
    </UserControl.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>

        <ListView ItemsSource="{Binding RentalsCollectionView}" 
                  SelectedItem="{Binding SelectedRental}"
                  Background="White" 
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Aftalenr."
                                    DisplayMemberBinding="{Binding AgreementId}" />
                    <GridViewColumn Header="Kunde"
                                    DisplayMemberBinding="{Binding RenterId}" />
                    <GridViewColumn Header="Reoler"
                                    DisplayMemberBinding="{Binding ShelfId}" />
                    <GridViewColumn Header="StartDato"
                                    DisplayMemberBinding="{Binding StartDate}" />
                    <GridViewColumn Header="SlutDato"
                                    DisplayMemberBinding="{Binding EndDate}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</UserControl>