<UserControl x:Class="Reolmarked.MVVM.View.RentersView"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Reolmarked.MVVM.View" 
             xmlns:vm="clr-namespace:Reolmarked.MVVM.ViewModel" 
             mc:Ignorable="d" 
             Height="450" Width="800" 
             Background="#f4f6f8">


    <UserControl.DataContext>
        <vm:RentersViewModel/>
    </UserControl.DataContext>


    <UserControl.Resources>

        <Style TargetType="Button">

            <Setter Property="Background" Value="#a2bcd9"/>

            <Setter Property="Foreground" Value="#070808"/>

            <Setter Property="FontSize" Value="12"/>

        </Style>

        


        <Style TargetType="TextBox" x:Key="SearchTextBoxStyle">

            <Setter Property="Height" Value="50"/>

            <Setter Property="FontSize" Value="14"/>

            <Setter Property="Background" Value="White"/>

            <Setter Property="Padding" Value="40,0,10,0"/>

            <Setter Property="BorderBrush" Value="#4488FF"/>

            <Setter Property="BorderThickness" Value="2"/>

            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Setter Property="Foreground" Value="Black"/>

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="TextBox">

                        <Grid>

                            <Border Background="{TemplateBinding Background}" 

                                    BorderBrush="{TemplateBinding BorderBrush}" 

                                    BorderThickness="{TemplateBinding BorderThickness}" 

                                    CornerRadius="4" />

                            <ScrollViewer Margin="0" 

                                          x:Name="PART_ContentHost" 

                                          VerticalAlignment="Center"/>

                            <Image Source="https://cdn2.hubspot.net/hubfs/4004166/bioticresearch_website_assets/images/search_icon.png" 

                                   Width="20" Height="20" 

                                   VerticalAlignment="Center" 

                                   HorizontalAlignment="Right" 

                                   Margin="10,0,0,0" 

                                   IsHitTestVisible="False"/>

                        </Grid>

                    </ControlTemplate>

                </Setter.Value>

            </Setter>

        </Style>

    </UserControl.Resources>



    <Grid Margin="20">

        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>

            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>



        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>



        <ListBox ItemsSource="{Binding RentersCollectionView, UpdateSourceTrigger=PropertyChanged}"
             SelectedItem="{Binding SelectedRenter, UpdateSourceTrigger=PropertyChanged}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}, {1} {2}, {3}, {4}, {5}">
                                    <Binding Path="PersonId"/>
                                    <Binding Path="FirstName"/>
                                    <Binding Path="LastName"/>
                                    <Binding Path="Phone"/>
                                    <Binding Path="Email"/>
                                    <Binding Path="City"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <GroupBox Grid.Row="0" Grid.Column="1" Margin="0,0,30,0">

            <Grid Width="300" HorizontalAlignment="Left">

                <StackPanel>

                    <TextBlock Text="Adminstrer Lejer"  

                               FontSize="16"  

                               Foreground="LightBlue" 

                               FontWeight="Bold" 

                               Margin="0,0,0,10"/>

                    <TextBox Text="Fornavn" Margin="0 10 0 0"/>

                    <TextBox Text="Efternavn" Margin="0 10 0 0"/>

                    <TextBox Text="Vejnavn" Margin="0 10 0 0"/>

                    <TextBox Text="Vejnummer" Margin="0 10 0 0"/>

                    <TextBox Text="Postnummer" Margin="0 10 0 0"/>

                    <TextBox Text="By" Margin="0 10 0 0"/>

                    <TextBox Text="Telefonnummer" Margin="0 10 0 0"/>

                    <TextBox Text="Email" Margin="0 10 0 0"/>

                </StackPanel>



                <Border Background="White"  

                        Width="270" Height="60" 

                        HorizontalAlignment="Center" VerticalAlignment="Center" 

                        Panel.ZIndex="1" 

                        CornerRadius="5" 

                        Padding="10">

                    <Grid>



                        <TextBlock Text="Opdateringen er nu gennemført!"  

                               HorizontalAlignment="Center"  

                               VerticalAlignment="Center"  

                               FontWeight="Bold" />



                        <Image Source="https://wallpapers.com/images/high/black-check-mark-green-background-qwbw1mxehl0sekj6-2.png" 

         Width="20" Height="20" 

         VerticalAlignment="Center" 

         HorizontalAlignment="Left" 

         Margin="10,0,0,0" 

         IsHitTestVisible="False"/>

                    </Grid>



                </Border>



            </Grid>

        </GroupBox>



        <Grid Grid.Row="0" Grid.Column="2" Width="250" HorizontalAlignment="Right" VerticalAlignment="Top">

            <TextBox x:Name="SearchTextBox" 

                     Style="{StaticResource SearchTextBoxStyle}" 

                     Width="250" 

                     Margin="0"/>

        </Grid>



        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,20,0,0">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*"/>

                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>



            <Button Name="UpdateBtn" Content="Opdater" 

                    Grid.Column="0" 

                    Height="25" Width="110" 

                    HorizontalAlignment="Left" 

                    Background="Green" 

                    Command="{Binding Path=TerminateRentalCommand}">

                <Button.Resources>

                    <Style TargetType="{x:Type Border}">

                        <Setter Property="CornerRadius" Value="10"/>

                    </Style>

                </Button.Resources>

            </Button>



            <Button Name="CancelBtn" Content="Annuler" 

                    Grid.Column="0" 

                    Height="25" Width="110" 

                    HorizontalAlignment="Center" 

                    Background="White" 

                    Command="{Binding Path=SaveCommand}">

                <Button.Resources>

                    <Style TargetType="{x:Type Border}">

                        <Setter Property="CornerRadius" Value="10"/>

                    </Style>

                </Button.Resources>

            </Button>

        </Grid>

    </Grid>

</UserControl> 

