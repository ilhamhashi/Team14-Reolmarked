<UserControl x:Class="Reolmarked.MVVM.View.RentersView"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Reolmarked.MVVM.View"
             xmlns:controls="clr-namespace:Reolmarked.MVVM.View.controls"
             xmlns:vm="clr-namespace:Reolmarked.MVVM.ViewModel" 
             mc:Ignorable="d" 
             Background="#f4f6f8">

    <UserControl.DataContext>
        <vm:RentersViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1"
                    Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="Søg"/>
                <TextBox Text="{Binding SelectedRenter.FirstName, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderThickness="1"
                         Width="250">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- Liste over lejere -->
            <ListBox ItemsSource="{Binding RentersCollectionView, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                 SelectedItem="{Binding SelectedRenter, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}, {1} {2}, {3}, {4}, {5}">
                                        <Binding Path="PersonId"/>
                                        <Binding Path="FirstName"/>
                                        <Binding Path="LastName"/>
                                        <Binding Path="Phone"/>
                                        <Binding Path="Email"/>
                                        <Binding Path="City"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal"
                        Margin="0,15,0,0"
                        HorizontalAlignment="Center">

                <Button Content="Opdater valgt lejer"
                        Height="25" Width="110"
                        Margin="0,0,10,0"
                        Background="Gray"
                        Command="{Binding UpdateRenterCommand}">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button Content="Slet valgt lejer"
                        Height="25" Width="110"
                        Margin="10,0,0,0"
                        Background="Gray"
                        Command="{Binding RemoveRenterCommand}">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>                
            </StackPanel>
        </StackPanel>

        <StackPanel Margin="10" >
            <TextBlock Text="Tilføj ny lejer"
                       FontSize="14" 
                       Foreground="LightBlue" 
                       FontWeight="Bold" />
            
            <Label Content="Fornavn"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Efternavn"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Email"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Telefon"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Gadenavn"/>
            <TextBox Text="{Binding StreetName, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Gadenummer"/>
            <TextBox Text="{Binding StreetNumber, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Postnummer"/>
            <TextBox Text="{Binding ZipCode, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="By"/>
            <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"/>


            <Button Content="Gem ny lejer"
                        Height="25" Width="110"
                        Background="Gray"
                        Command="{Binding AddRenterCommand}">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        
    </Grid>

</UserControl>

