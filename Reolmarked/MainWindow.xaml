<Window x:Class="Reolmarked.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reolmarked"
        xmlns:vm="clr-namespace:Reolmarked.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="800" Width="1300"
        Background="Transparent">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Border Background="#E6E6E6"
            CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Indre Grid i kolonne 0 -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- TITLE -->
                <TextBlock Text="Reolmarked"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="Black"
                               FontWeight="Black"
                               FontSize="24"
                               FontFamily="Segoe UI Semibold"/>

                <!-- MENU -->
                <StackPanel Grid.Row="1">
                    <RadioButton Content="Registrer Salg"
                                     Style="{StaticResource MenuButtonTheme}"
                                     IsChecked="True"
                                     Command="{Binding SalesViewCommand}"/>

                    <RadioButton Content="Udlej reol"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding CreateRentalViewCommand}"/>

                    <RadioButton Content="Administrer udlejning"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding RentalsViewCommand}"/>

                    <RadioButton Content="Administrer lejere"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding RentersViewCommand}"/>

                    <RadioButton Content="Månedsopgørelser"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding MonthlyStatementViewCommand}"/>

                    <RadioButton Content="Prismærker"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding PriceLabelsViewCommand}"/>
                </StackPanel>
            </Grid> 

            <ContentControl Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentMainWindowView}"/>
        </Grid>
    </Border>
</Window>
